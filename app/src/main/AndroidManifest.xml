<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="io.studiodan.breathe">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/BreatheMaterialTheme">
        <activity
            android:name=".ActivityMain"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityAddTask"
            android:label="@string/add_task_name">
        </activity>
        <activity
            android:name=".ActivityInspectList"
            android:label="@string/inspect_list_name">
        </activity>
        <activity
            android:name=".ActivityAddRoutine"
            android:label="@string/add_routine_name">
        </activity>
    </application>

</manifest>